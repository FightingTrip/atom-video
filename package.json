{
  "name": "atom-video",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:frontend": "cd frontend ; pnpm dev",
    "dev:mock": "cd frontend ; pnpm dev:mock",
    "dev:backend": "cd backend ; pnpm dev",
    "build": "concurrently \"pnpm build:frontend\" \"pnpm build:backend\"",
    "build:frontend": "cd frontend ; pnpm build",
    "build:backend": "cd backend ; pnpm build",
    "lint": "concurrently \"pnpm lint:frontend\" \"pnpm lint:backend\"",
    "lint:frontend": "cd frontend ; pnpm lint",
    "lint:backend": "cd backend ; pnpm lint",
    "test": "pnpm -r test",
    "test:frontend": "cd frontend && pnpm test",
    "test:backend": "cd backend && pnpm test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "test:ci": "pnpm -r test:ci",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,vue}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,vue}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  }
}