{
  "version": "1.0.0",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": ["**/*.md", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"]
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): version %s",
      "createRelease": "github"
    }
  },
  "packages": [
    "frontend",
    "backend",
    "packages/*"
  ]
} 