# 应用配置
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:5173

# 数据库配置
DATABASE_URL="postgresql://user:password@localhost:5432/atom_video?schema=public"

# JWT配置
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# 邮件服务配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM=noreply@atomvideo.com

# 存储服务配置
STORAGE_TYPE=local # local | s3 | oss
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_BUCKET=atom-video
STORAGE_REGION=us-east-1

# OAuth配置
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=/api/auth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=/api/auth/github/callback

# 视频配置
MAX_VIDEO_SIZE=104857600 # 100MB
ALLOWED_VIDEO_TYPES=mp4,mov,avi
VIDEO_STORAGE_DIR=uploads/videos
THUMBNAIL_STORAGE_DIR=uploads/thumbnails

# 前端 URL
FRONTEND_URL="http://localhost:3000"

# API URL
API_URL="http://localhost:4000" 